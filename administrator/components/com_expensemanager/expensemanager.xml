<?xml version="1.0" encoding="utf-8"?>
<extension type="component" version="3.10" method="upgrade">
    
    <name>com_expensemanager</name>
    <creationDate>2025-07-23</creationDate>
    <author>Pedro In√°cio Rodrigues Pontes</author>
    <authorEmail>pedroinaciopontes@gmail.com</authorEmail>
    <authorUrl>http://seusite.com</authorUrl>
    <copyright>Copyright (C) 2025. Todos os direitos reservados.</copyright>
    <license>GNU General Public License version 2</license>
    <version>1.0.0</version>
    <description>COM_EXPENSEMANAGER_DESCRIPTION</description>

    <install>
        <sql>
            <file driver="mysql" charset="utf8">sql/install.mysql.utf8.sql</file>
        </sql>
    </install>

    <uninstall>
        <sql>
            <file driver="mysql" charset="utf8">sql/uninstall.mysql.utf8.sql</file>
        </sql>
    </uninstall>

    <update>
        <schemas>
            <schemapath type="mysql">sql/updates/mysql</schemapath>
        </schemas>
    </update>

    <administration>
        <menu link="option=com_expensemanager">COM_EXPENSEMANAGER</menu>
        
        <submenu>
            <menu link="option=com_expensemanager&amp;view=cities">COM_EXPENSEMANAGER_CITIES</menu>
            <menu link="option=com_expensemanager&amp;view=consultants">COM_EXPENSEMANAGER_CONSULTANTS</menu>
            <menu link="option=com_expensemanager&amp;view=clients">COM_EXPENSEMANAGER_CLIENTS</menu>
            <menu link="option=com_expensemanager&amp;view=categories">COM_EXPENSEMANAGER_CATEGORIES</menu>
            <menu link="option=com_expensemanager&amp;view=expenses">COM_EXPENSEMANAGER_EXPENSES</menu>
        </submenu>

        <files folder="admin">
            <filename>index.html</filename>
            <filename>expensemanager.php</filename>
            <filename>controller.php</filename>
            <filename>access.xml</filename>
            <filename>config.xml</filename>
            <folder>controllers</folder>
            <folder>models</folder>
            <folder>views</folder>
            <folder>tables</folder>
            <folder>helpers</folder>
            <folder>sql</folder>
            <folder>libraries</folder>
        </files>

        <languages folder="admin/language">
            <language tag="en-GB">en-GB/en-GB.com_expensemanager.ini</language>
            <language tag="en-GB">en-GB/en-GB.com_expensemanager.sys.ini</language>
            <language tag="pt-BR">pt-BR/pt-BR.com_expensemanager.ini</language>
            <language tag="pt-BR">pt-BR/pt-BR.com_expensemanager.sys.ini</language>
        </languages>
    </administration>

    <languages folder="site/language">
        <language tag="en-GB">en-GB/en-GB.com_expensemanager.ini</language>
        <language tag="en-GB">en-GB/en-GB.com_expensemanager.sys.ini</language>
        <language tag="pt-BR">pt-BR/pt-BR.com_expensemanager.ini</language>
        <language tag="pt-BR">pt-BR/pt-BR.com_expensemanager.sys.ini</language>
    </languages>


    <files folder="site">
        <filename>index.html</filename>
        <filename>expensemanager.php</filename>
        <filename>controller.php</filename>
        <filename>router.php</filename>
        <folder>controllers</folder>
        <folder>models</folder>
        <folder>views</folder>
        <folder>assets</folder>
    </files>

</extension>